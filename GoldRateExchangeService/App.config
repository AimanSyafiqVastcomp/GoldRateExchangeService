<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
	<appSettings>
		<!-- Select website option: 1 for TTTBullion, 2 for MSGold -->
		<add key="WebsiteOption" value="1" />

		<add key="UrlOption1" value="https://tttbullion.com/rates" />
		<add key="UrlOption2" value="https://msgold.com.my/" />

		<add key="ConnectionString" value="Data Source=LAPTOP-NBAO3H83;Initial Catalog=GoldRatesDB;User ID=sa;Password=1234;" />

		<add key="CompanyName1" value="TTTBullion" />
		<add key="CompanyName2" value="MSGold" />

		<!-- Timer configuration - how often to extract data (minutes) -->
		<add key="ExtractionIntervalMinutes" value="1" />

		<!-- Initial delay before first extraction (milliseconds) -->
		<add key="InitialDelayMilliseconds" value="100" />

		<!-- Error handling -->
		<add key="MaxConsecutiveErrors" value="3" />
		<add key="AutoSwitchWebsiteOnError" value="true" />

		<!-- Web scraping timeouts -->
		<add key="NavigationTimeoutMs" value="30000" />
		<add key="WaitAfterNavigationMs" value="5000" />
		<add key="ScriptTimeoutMs" value="60000" />
		
	</appSettings>
